  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "declaration": true,
    "strict": true,
    "outDir": "./dist/",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "exclude": [
    "dist",
    "test"
  ]
}